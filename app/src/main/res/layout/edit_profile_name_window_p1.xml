<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="30dp"
    android:id="@+id/edit_profile_name_window_p1_layout"
    android:layout_marginEnd="30dp"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/no_connection_bg"
    android:theme="@style/reg_txtInputLayout">

    <TextView
        android:id="@+id/editProfileName_change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/productsansbold"
        android:text="Change Name"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightest_black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editProfileName_firstName_txtLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="First Name"
        android:textColorHint="@color/gray"
        app:boxStrokeColor="@color/reg_txtimputlayout"
        app:endIconMode="clear_text"
        app:endIconTint="@color/dark_black"
        app:errorTextColor="@color/red_pie"
        app:boxStrokeErrorColor="@color/red_pie"
        app:errorIconTint="@color/red_pie" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editProfileName_firstName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansregular"
            android:singleLine="true"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editProfileName_LastName_txtLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Last Name"
        android:textColorHint="@color/gray"
        app:boxStrokeColor="@color/reg_txtimputlayout"
        app:endIconMode="clear_text"
        app:endIconTint="@color/dark_black"
        app:errorTextColor="@color/red_pie"
        app:boxStrokeErrorColor="@color/red_pie"
        app:errorIconTint="@color/red_pie" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editProfileName_LastName_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansregular"
            android:singleLine="true"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:contentPadding="10dp"
        app:cardBackgroundColor="@color/lightest_black">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansregular"
            android:text="Please note: If you change your name, you can't change it again for 60 days. Don't add any unusual capitalisation, punctuation, characters or random words."
            android:textColor="@color/gray"
            android:textSize="17sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/editProfileName_review_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/try_again_bg"
        android:fontFamily="@font/productsansbold"
        android:foreground="@drawable/ripple_round"
        android:gravity="center"
        android:text="Review Change"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editProfileName_cancel_p1_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btns_light_black_main"
        android:fontFamily="@font/productsansbold"
        android:foreground="@drawable/ripple_round"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>