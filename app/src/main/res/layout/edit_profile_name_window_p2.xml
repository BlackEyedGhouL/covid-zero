<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:padding="20dp"
    android:id="@+id/edit_profile_name_window_p2_layout"
    android:orientation="vertical"
    android:background="@drawable/no_connection_bg"
    android:theme="@style/reg_txtInputLayout">

    <TextView
        android:id="@+id/editProfileName_change_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="Preview"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightest_black"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_regular"
        android:text="Choose how your name will appear on your profile."
        android:textColor="@color/gray"
        android:textSize="17sp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senith Umesha"
        android:buttonTint="@color/red_pie"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/product_sans_regular"
        android:layoutDirection="rtl"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/lightest_black"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Umesha Senith"
        android:buttonTint="@color/red_pie"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:fontFamily="@font/product_sans_regular"
        android:layoutDirection="rtl"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_regular"
        android:text="To save this setting, please enter your account password."
        android:textColor="@color/gray"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editProfileName_password_txtLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:textColorHint="@color/gray"
        app:boxStrokeColor="@color/reg_txt_input_layout"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/dark_black"
        app:errorTextColor="@color/red_pie"
        app:boxStrokeErrorColor="@color/red_pie"
        app:errorIconTint="@color/red_pie">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editProfileName_password_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_regular"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/editProfileName_save_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/try_again_bg"
        android:fontFamily="@font/product_sans_bold"
        android:foreground="@drawable/ripple_round"
        android:gravity="center"
        android:text="Save Changes"
        android:textColor="@color/red_pie"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editProfileName_cancel_p2_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_light_black_main"
        android:fontFamily="@font/product_sans_bold"
        android:foreground="@drawable/ripple_round"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>