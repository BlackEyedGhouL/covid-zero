<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightest_black"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/lightest_black">

        <TextView
            android:id="@+id/check_in_history_row_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/product_sans_bold"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/check_in_history_row_person_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/check_in_history_row_person_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/check_in_history_row_date_and_guests"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_baseline_qr_code_24"
            app:layout_constraintTop_toTopOf="@+id/check_in_history_row_location"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/check_in_history_row_date_and_guests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/product_sans_regular"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/check_in_history_row_location"
            app:layout_constraintTop_toBottomOf="@+id/check_in_history_row_location"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>