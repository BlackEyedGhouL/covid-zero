<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.StartUpScreen"
    android:background="@color/dark_black"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="90dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/virus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Safe &amp; Updated"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/product_sans_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVID-19"
            android:textSize="35sp"
            android:textColor="@color/red_pie"
            android:layout_gravity="center"
            android:fontFamily="@font/product_sans_bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:textSize="17sp"
            android:fontFamily="@font/product_sans_regular"
            android:text="The globally-trusted source of the latest COVID-19 info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/login_btnLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:layout_weight="1"
                android:background="@color/light_black"
                android:textColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple"
                android:fontFamily="@font/product_sans_bold"
                android:layout_marginEnd="10dp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/login_btnSignup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/product_sans_bold"
                android:foreground="@drawable/ripple"
                android:textColor="@color/white"
                android:background="@color/light_black"
                android:layout_weight="1"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>